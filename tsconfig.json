{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "target": "es2019",
    "lib": [
      "dom", // needed for a "bug" in the jszip typings (uses Blob)
      "es2019"
    ],
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false // Needed to compile tap and ansi-escapes
  },
  "include": [
    "./lib/**/*"
  ]
}
